<Window x:Class="LMCSHD.PixelOrderEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMCSHD"
        mc:Ignorable="d"
        Title="Pixel Order Editor"
        WindowStyle="ToolWindow" 
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="2"/>
        </Style>


    </Window.Resources>
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="84"/>
            <ColumnDefinition Width="103"/>
            <ColumnDefinition Width="78"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Orientation"/>
        <ComboBox x:Name="UIOrientation"

                          Grid.Column="1"
                              Margin="2"
                  SelectionChanged="Direction_SelectionChanged">
            <ComboBoxItem Content="Horizontal"/>
            <ComboBoxItem Content="Vertical"/>
        </ComboBox>

        <TextBlock Text="Starting Corner"
                           Grid.Row="1"/>
        <ComboBox x:Name="UIStartingCorner"
                          Grid.Column="1"
                          Grid.Row="1"
                              Margin="2"
                  SelectionChanged="StartingCorner_SelectionChanged">
            <ComboBoxItem Content="Top Left"/>
            <ComboBoxItem Content="Top Right"/>
            <ComboBoxItem Content="Bottom Left"/>
            <ComboBoxItem Content="Bottom Right"/>
        </ComboBox>

        <TextBlock Text="New Line"
                           Grid.Row="2"/>
        <ComboBox x:Name="UINewLine"
                          Grid.Column="1"
                          Grid.Row="2"
                              Margin="2"
                  SelectionChanged="NewLine_SelectionChanged">
            <ComboBoxItem Content="Scan"/>
            <ComboBoxItem Content="Snake"/>
        </ComboBox>


        <Image x:Name="HelperImage"
            Grid.Column="2"
               Grid.RowSpan="4"
                   Width="78"
                   Height="78">
        </Image>


    </Grid>
</Window>


